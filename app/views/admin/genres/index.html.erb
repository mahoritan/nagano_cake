<div class="container mb-5">
  <div class="row pt-5 ml-5 mb-5">
    <div class="bg-light text-dark">
      <h4>ジャンル一覧・追加</h4>
    </div>
  </div>

<%= form_with model:@genre, url:'/admin/genres', local:true do |f| %>
  <div class="row">
    <label class="col-md-2 col-form-label">ジャンル名</label>
        <%= f.text_field :name, autofocus: true, class: "form-control col-md-3", placeholder: "ジャンル名" %>
  <%= f.submit '新規投稿', class: 'btn btn-success ml-3' %>
  </div>
<% end %>

<div class="row mt-5">
  <div class="col-sm-4">
    <table class="table">
      <tr class="table-secondary">
        <th>ジャンル</th>
        <th></th>
      </tr>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-sm btn-success' %></td>
      </tr>
    <% end %>
    </table>
  </div>
</div>
</div>
