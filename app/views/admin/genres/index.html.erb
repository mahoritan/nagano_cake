<h2>ジャンル一覧・追加</h2>

<%= form_with model:@genre, url:'/admin/genres', local:true do |f| %>
  <h4>ジャンル名</h4>
  <%= f.text_field :name %>
  <%= f.submit '新規投稿' %>
<% end %>

<p>ジャンル</p>
<% @genres.each do |genre| %>
  <span><%= genre.name %></span>
  <%= link_to "編集", edit_admin_genre_path(genre.id) %>
<% end %>