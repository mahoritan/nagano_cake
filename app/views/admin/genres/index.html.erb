<div class="container">
  <div class="row mb-5">
    <div class="bg-light text-dark">
      <h4>ジャンル一覧・追加</h4>
    </div>
  </div>

<%= form_with model:@genre, url:'/admin/genres', local:true do |f| %>
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">ジャンル名</label>
      <div class="col-sm-3">
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>
  <%= f.submit '新規投稿', class: 'btn btn-success' %>
  </div>
<% end %>

<div class="row mt-5">
  <div class="col-sm-4">
    <table class="table">
      <tr class="table-light">
        <th>ジャンル</th>
        <th></th>
      </tr>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-sm btn-success' %></td>
      </tr>
    <% end %>
    </table>
  </div>
</div>
