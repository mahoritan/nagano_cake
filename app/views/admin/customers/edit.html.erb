<div class="container mb-5">
  <div class="row mt-5">
    <h4 class="bg-light text-dark">　<%= @customer.full_name %>さんの会員情報編集　</h4>
  </div>

  <%= form_with model:@customer,url: admin_customer_path(@customer.id), local:true do |f| %>

  <div class="row mb-3 mt-5">
    <label class="col-form-label col-md-3">会員ID</label>
    <div class="col-sm-9">
      <%= @customer.id %>
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-md-3 col-form-label">名前</label>
    <%= f.text_field :last_name, autofocus: true, class: "form-control col-md-3 mr-3" %>
    <%= f.text_field :first_name, class: "form-control col-md-3" %>
  </div>
  <div class="row mb-3">
    <label class="col-sm-3 col-form-label">フリガナ</label>
    <%= f.text_field :last_name_kana, class: "form-control col-md-3 mr-3" %>
    <%= f.text_field :first_name_kana, class: "form-control col-md-3" %>
  </div>
  <div class="row mb-3">
    <label class="col-form-label col-md-3">郵便番号</label>
    <%= f.text_field :postal_code, class: "form-control col-md-3" %>
  </div>
  <div class="row mb-3">
    <label class="col-form-label col-md-3">住所</label>
    <%= f.text_field :address, class: "form-control col-md-7" %>
  </div>
  <div class="row mb-3">
    <label class="col-form-label col-md-3">電話番号</label>
    <%= f.text_field :telephone_number, class: "form-control col-md-3" %>
  </div>
  <div class="row mb-3">
    <label class="col-form-label col-md-3">メールアドレス</label>
    <%= f.email_field :email, autocomplete: "email", class: "form-control col-md-3" %>
  </div>
  <div class="row mb-3">
    <label class="col-form-label col-md-3">会員ステータス</label>
    <div class="form-group col-md-3">
      <%= f.radio_button :is_deleted, "false" %>
      <%= f.label :is_deleted, "有効" %>
      <%= f.radio_button :is_deleted, "true" %>
      <%= f.label :is_deleted, "退会" %>
    </div>
  </div>
  <div class="row">
    <div class="offset-md-3">
      <div class="col-md-9 actions">
        <%= f.submit "編集する", class: 'btn btn-success' %>
      </div>
    </div>
  </div>
<% end %>
</div>