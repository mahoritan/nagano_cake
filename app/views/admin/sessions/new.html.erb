<div class="container">
  <div class="row mb-4">
    <h4 class="bg-light text-dark">　管理者ログイン　</h4>
  </div>
  <div class="mx-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form_group row mb-3">
        <div class="col-md-3 offset-sm-1">
          <%= f.label :email,"メールアドレス", class: 'col-form-label' %>
        </div>
        <div class="col-md-6">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-3 offset-sm-1">
          <%= f.label :password, "パスワード", class: 'col-form-label' %>
        </div>
        <div class="col-md-6">
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        </div>
      </div>

    <div class="row mt-4">
      <div class="offset-sm-4">
        <div class="col-sm-7 actions">
          <%= f.submit "   ログイン   ", class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
