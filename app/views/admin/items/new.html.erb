<div class="container">
  <div class="row mt-5 mb-5">
    <div class="bg-light text-dark">
      <h4>　商品新規登録　</h4>
    </div>
  </div>
    <%= form_with model:@item, url: admin_items_path, local:true do |f| %>
    <div class="row">
      <div class="col-md-2 offset-md-2">
        <label class="col-form-label">商品画像</label>
      </div>
      <div class="col-md-8">
        <%= f.attachment_field :image, class: 'col-md-6' %>
      </div>
      
      <div class="col-md-2 offset-md-2 mt-2">
        <label class="col-form-label">商品名</label>
      </div>
      <div class="col-md-8 mt-2">
        <%= f.text_field :name, autofocus: true, class: 'form-control col-md-6', placeholder: '商品名' %>
      </div>
      
      <div class="col-md-2 offset-md-2 mt-2">
        <label class="col-form-label">商品説明</label>
      </div>
      <div class="col-md-8 mt-2">
        <%= f.text_area :introduction, class: 'form-control col-md-6', placeholder: 'ここに説明文を記述します' %>
      </div>
      
      <div class="col-md-2 offset-md-2 mt-2">
        <label class="col-form-label">ジャンル</label>
      </div>
      <div class="col-md-8 mt-2">
        <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: '選択してください' }, class: 'form-control col-md-6' %>
      </div>
      
      <div class="col-md-2 offset-md-2 mt-2">
        <label class="col-form-label">税抜価格</label>
      </div>
      <div class="col-md-8 mt-2 form-inline">
        <%= f.text_field :price, class: 'form-control col-md-6', placeholder: '1000' %>　円
      </div>
    </div>
    <div class="row mt-3">
      <%= f.submit '新規登録', class: 'btn btn-success mx-auto' %>
    </div>
<% end %>

</div>