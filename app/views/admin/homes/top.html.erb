<div class="container">
  <div class="row pt-3 mb-3 ml-5">
    <h4 class="bg-light text-dark">　注文履歴一覧　</h4>
  </div>
    <div class="row">
      <table class="table col-md-10 mx-auto">
        <tr class="table-secondary">
          <th class="col-md-4">購入日時</th>
          <th class="col-md-4">購入者</th>
          <th class="col-md-4">注文個数</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
          <td><%= order.customer.full_name %></td>
            <% @sum = 0 %>
            <% order.order_details.each do |order_detail| %>
              <% @sum += order_detail.amount %>
            <% end %>
          <td><%= @sum %></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="row offset-md-5">
      <%= paginate @orders %>
    </div>
</div>