<div class="container">
  <div class="row mt-5">
    <h4 class="bg-light text-dark">　配送先編集　</h4>
  </div>
 <%= form_with model:@address, local:true do |f| %>
  <div class="row mt-5 mb-3">
    <div class="col-sm-3 ">
      <label　class="col-form-label">郵便番号(ハイフンなし)</label>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-sm-3 ">
      <label　class="col-form-label">住所</label>
    </div>
    <div class="col-sm-7">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-sm-3 ">
      <label　class="col-form-label">宛名</label>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-sm-3 offset-sm-3">
      <%= f.submit "　変更内容を保存　", class: 'btn btn-success' %>
    </div>
  </div>
  <% end %>
</div>