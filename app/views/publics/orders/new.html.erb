<div class="container">
  <div class="row mt-5 ml-5">
    <h4 class="bg-light text-dark">　注文情報入力　</h4>
  </div>

  <div class="row mt-3">
    <h5 class="font-weight-bold">支払方法</h5>
  </div>
  <div class="row ml-4">
    <%= form_with model: @order, url: orders_confirm_path , method: :post, local:true do |f| %>
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %></br>
      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
  </div>
  <div class="row mt-3">
    <h5 class="font-weight-bold">お届け先</h5>
  </div>
  <div class="row ml-4">
    <div class="form-group">
      <%= f.radio_button :select_address, 0 %>
      <%= f.label :select_address, Order.select_addresses_i18n[:home_address] %></br>
        <div class="ml-4 mb-2">
          〒<%= current_customer.postal_code %>　<%= current_customer.address %></br>
          <%= current_customer.full_name %>
        </div>
    </div>
  </div>
  <div class="row ml-4">
    <div class="form-group">
      <%= f.radio_button :select_address, 2 %>
      <%= f.label :select_address, Order.select_addresses_i18n[:new_address] %>
    </div>
  </div>
  <div class="form-group row ml-4">
    <div class="col-md-3">
      <%= f.label :postal_code,"郵便番号(ハイフンなし)", class: 'col-form-label' %>
    </div>
    <div class="col-md-9">
      <%= f.text_field :postal_code, class: 'form-control col-md-5', placeholder: "0000000" %>
    </div>
  </div>
  <div class="form-group row ml-4">
    <div class="col-md-3">
      <%= f.label :address,"住所", class: 'col-form-label' %>
    </div>
    <div class="col-md-9">
      <%= f.text_field :address, class: 'form-control col-md-9', placeholder: "東京都渋谷区代々木神園0-0" %>
    </div>
  </div>
  <div class="form-group row ml-4">
    <div class="col-md-3">
      <%= f.label :name,"宛名", class: 'col-form-label' %>
    </div>
    <div class="col-md-9">
      <%= f.text_field :name, class: 'form-control col-md-5', placeholder: "令和道子" %>
    </div>
  </div>
  <div class="row mt-3">
    <%= f.submit '確認画面に進む', class: 'btn btn-primary mx-auto' %>
  </div>
  <% end %>
</div>