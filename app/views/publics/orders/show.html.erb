<div class="container">
  <div class="row mt-5 ml-5">
    <h4 class="bg-light text-dark">　注文履歴詳細　</h4>
  </div>

  <div class="row mt-5 mb-3">
    <div class="col-md-8">
      <h6 class="font-weight-bold">注文情報</h6>
      <table class="table table-bordered">
        <tr>
          <th class="table-secondary">注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="table-secondary">配送先</th>
          <td>〒<%= @order.postal_code %></br>
          <%= @order.address %></br>
          <%= @order.name %></td>
        </tr>
        <tr>
          <th class="table-secondary">支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-4">
      <h6 class="font-weight-bold">請求情報</h6>
      <table class="table table-bordered">
        <tr>
          <th class="table-secondary">商品合計</th>
          <td><%= @sum.floor %></td>
        </tr>
        <tr>
          <th class="table-secondary">配送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th class="table-secondary">ご請求額</th>
          <td><%= @order.total_payment %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10">
      <h6 class="font-weight-bold">注文内容</h6>
      <table class="table table-bordered">
        <tr class="table-secondary">
          <th class="col-md-6">商品</th>
          <th class="col-md-2">単価（税込）</th>
          <th class="col-md-1">個数</th>
          <th class="col-md-1">小計</th>
        </tr>
        <% @order.order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= (order_detail.item.price * 1.1).floor %></td>
          <td><%= order_detail.amount %></td>
          <td><%= (order_detail.item.price * 1.1).floor * order_detail.amount %></td>
        </tr>
        <% end %>
      </table>
     </div>
  </div>
</div>