<div class="container">
  <div class="row ml-1 mt-5">
    <h3 class="font-weight-bold mr-2">商品一覧</h3>
    <h6 class="d-flex align-items-end">(全<%= @items.count %>件)</h6>
  </div>
  <div class="row mt-5">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <div class="card border border-0">
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item,:image, format: 'jpeg', fallback: "no_image.jpg", size: "200xauto", class: "bd-placeholder-img card-img-top" %>
          <% end %>
          <div class="card-body font-weight-bold">
            <%= item.name %> </br>
            <%= item.with_tax_price.to_s(:delimited) %> 円
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="row offset-md-5">
      <%= paginate @items %>
    </div>
</div>