<div class="container">
  <div class="row mt-5">
    <div class="col-md-5 text-center">
      <%= attachment_image_tag @item, :image, format: 'jpeg', fallback: "no_image.jpg", size: "250x167" %>
    </div>
    <div class="col-md-7">
      <p class="h3 font-weight-bold mb-3"><%= @item.name %></p>
      <p class="h5"><%= @item.introduction %></p>
      <p class="h4 font-weight-bold mt-5">
        <%= @item.with_tax_price %> 円
        <span class="small">(税込)</span>
      </p>
    </div>
    </div>
    <div class="row mt-2">
      <div class="col-md-7 offset-md-5">
        <div class="form-inline">
          <%= form_with model: @cart_item, url: cart_items_path, local:true do |f| %>
          <%= f.select :amount, *[1..10], {include_blank: '個数選択'}, {class: 'form-control col-md-6 mr-2' } %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.submit "カートに入れる", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>