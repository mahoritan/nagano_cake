<div class="container">
  <div class="row mt-5">
    <div class="col-md-5 text-center">
      <%= attachment_image_tag @item, :image, format: 'jpeg', fallback: "no_image.jpg", size: "250x167" %>
    </div>
    <div class="col-md-7">
      <p class="h3 font-weight-bold mb-3"><%= @item.name %></p>
      <p class="h5"><%= @item.introduction %></p>
      <p class="h4 font-weight-bold mt-5">
        <%= @item.add_tax_price.to_s(:delimited) %> 円
        <span class="small">(税込)</span>
      </p>
    </div>
    </div>
    <div class="row mt-2">
      <div class="col-md-2 offset-md-5">
        <%= form_with model: @cart_item, url: cart_items_path, local:true do |f| %>
        <%= f.select :amount, *[1..5], {include_blank: '個数選択'}, {class: 'form-control'} %>
        <%= f.hidden_field :item_id, :value => @item.id %>
      </div>
      <div class="col-md-5">
        <%= f.submit "カートに入れる", class: "btn btn-success" %>
      </div>
    <% end %>

</div>

</div>