<div class="container">
  <div class="row mb-5">
    <div class="bg-light text-dark">
      <h4>　マイページ　</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2 col-form-label">
      <h5 class="font-weight-bold">登録情報</h5>
    </div>
    <div class="col-sm-10">
      <%= link_to "編集する", customers_edit_path, class: 'btn btn-success' %>
    </div>
  </div>
  <div class="row mt-3 mb-3">
    <div class="col-md-8">
      <table class="table table-bordered">
        <tr>
          <th class="table-secondary font-weight-normal">氏名</th>
          <td><%= current_customer.last_name %>　<%= current_customer.first_name %></td>
        </tr>
        <tr>
          <th class="table-secondary font-weight-normal">カナ</th>
          <td><%= current_customer.last_name_kana %>　<%= current_customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-secondary font-weight-normal">郵便番号</th>
          <td><%= current_customer.postal_code %></td>
        </tr>
        <tr>
          <th class="table-secondary font-weight-normal">住所</th>
          <td><%= current_customer.address %></td>
        </tr>
        <tr>
          <th class="table-secondary font-weight-normal">電話番号</th>
          <td><%= current_customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="table-secondary font-weight-normal">メールアドレス</th>
          <td><%= current_customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-sm-2 col-form-label">
      <h5 class="font-weight-bold">配送先</h5>
    </div>
    <div class="col-sm-10">
      <%= link_to "一覧を見る", customers_edit_path, class: 'btn btn-primary' %>　<%# editのまま、要修正 %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2 col-form-label">
      <h5 class="font-weight-bold">注文履歴</h5>
    </div>
    <div class="col-sm-10">
      <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary' %> <%# editのまま、要修正 %>
    </div>
  </div>
</div>