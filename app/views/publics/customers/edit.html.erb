<div class="container mb-5">
  <div class="row mt-5 ml-5 mb-5">
    <h4 class="bg-light text-dark">　会員情報編集　</h4>
  </div>

  <%= form_with model:@customer,url: customers_path, local:true do |f| %>

  <div class="row mt-5 mb-3">
    <label class="col-md-3 col-form-label">名前</label>
      <%= f.text_field :last_name, autofocus: true, class: "form-control col-md-3 mr-4" %>
      <%= f.text_field :first_name, class: "form-control col-md-3" %>
  </div>
  <div class="row mb-3">
    <label class="col-md-3 col-form-label">フリガナ</label>
      <%= f.text_field :last_name_kana, class: "form-control col-md-3 mr-4" %>
      <%= f.text_field :first_name_kana, class: "form-control col-md-3" %>
  </div>
  <div class="row mb-3">
    <label class="col-form-label col-md-3">郵便番号</label>
    <%= f.text_field :postal_code, class: "form-control col-md-3" %>
  </div>
  <div class="row mb-3">
    <label class="col-form-label col-md-3">住所</label>
    <%= f.text_field :address, class: "form-control col-md-7" %>
  </div>
  <div class="row mb-3">
    <label class="col-form-label col-md-3">電話番号</label>
    <%= f.text_field :telephone_number, class: "form-control col-md-3" %>
  </div>
  <div class="row mb-3">
    <label class="col-form-label col-md-3">メールアドレス</label>
    <%= f.email_field :email, autocomplete: "email", class: "form-control col-md-3" %>
  </div>

  <div class="row">
    <div class="col-md-5 offset-sm-3">
        <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
      </div>
      <div class="col-md-4">
        <%= link_to "退会する", customers_unsubscribe_path, class: 'btn btn-danger', data: { confirm: '退会しますか？' } %>
    </div>
  </div>
  <% end %>
</div>