<div class="container">
  <div class="row mt-5">
    <h4 class="bg-light text-dark">　会員情報編集　</h4>
  </div>

  <%= form_with model:@customer,url: customers_path, local:true do |f| %>

  <div class="row mt-5 mb-3">
    <label class="col-sm-3 col-form-label">名前</label>
      <div class="col-sm-3">
        <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
      </div>
      <div class="col-sm-3">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
  </div>
  <div class="row mb-3">
    <label class="col-sm-3 col-form-label">フリガナ</label>
      <div class="col-sm-3">
        <%= f.text_field :last_name_kana, class: "form-control" %>
      </div>
      <div class="col-sm-3">
        <%= f.text_field :first_name_kana, class: "form-control" %>
      </div>
  </div>
  <div class="row mb-3">
    <div class="col-sm-3 ">
      <label　class="col-form-label">郵便番号</label>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-sm-3 ">
      <label　class="col-form-label">住所</label>
    </div>
    <div class="col-sm-9">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-sm-3 ">
      <label　class="col-form-label">電話番号</label>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :telephone_number, class: "form-control" %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-sm-3 ">
      <label　class="col-form-label">メールアドレス</label>
    </div>
    <div class="col-sm-3">
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-5 offset-sm-3">
        <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
      </div>
      <div class="col-sm-4">
        <%= link_to "退会する", customers_unsubscribe_path, class: 'btn btn-danger' %>
    </div>
  </div>

<% end %>