<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "publics/shared/error_messages", resource: resource %>

<div class="container">
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">名前</label>
      <div class="col-sm-10">
        <%= f.label :last_name, "(姓)" %>
        <%= f.text_field :last_name, autofocus: true %>
        <%= f.label :first_name, "(名)" %>
        <%= f.text_field :first_name %>
      </div>
  </div>
   <div class="row mb-3">
    <label class="col-sm-2 col-form-label">フリガナ</label>
      <div class="col-sm-10">
        <%= f.label :last_name_kana, "(セイ)" %>
        <%= f.text_field :last_name_kana %>
        <%= f.label :first_name_kana, "(メイ)" %>
        <%= f.text_field :first_name_kana %>
      </div>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_code,"郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address,"住所" %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :telephone_number,"電話番号(ハイフンなし)" %><br />
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>


<% end %>
</div>
<%= render "publics/shared/links" %>
